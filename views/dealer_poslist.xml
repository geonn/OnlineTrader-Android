<Alloy>
	<Window class="container" id="dealer_poslist">
		<View id="header">
			<ImageView width="7%" left="10%" onTouchend="refreshPage" image="/images/refresh-icon.png" />
			<View class="border-line" left="25%" top="0%"></View>
			<Label class="h1" id="appTitle">ONLINE TRADER</Label>
			<View class="border-line" left="75%" top="0%"></View>
			<Label class="rightNav" id="rightNav" mod="pos" onTouchend="popup">ADD</Label>
		</View>
		<View class="content_post" id="content">
			<Label class="h2">COURIER LIST</Label>
			<ImageView class="separator" ></ImageView>
			
		</View>
		<View class="list_form" id="list_form" >
			
			<ScrollView height="auto" id="poslistable"  layout="vertical" >
	        	<WebView layout="vertical" height="auto" id="poslistview" height="auto" disableBounce="true" url="/html/dealer_poslist.html" />
	        </ScrollView>	 
		</View>
		<Require type="view" src="_dealer_footer" id="footer"/>
	
	</Window>
</Alloy>